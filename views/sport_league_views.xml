<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--sport.league tree view-->
    <record id="sport_league_view_tree" model="ir.ui.view">
        <field name="name">sport_league.view.tree</field>
        <field name="model">sport.league</field>
        <field name="arch" type="xml">
            <tree string="Leagues">
                <field name="name" />
                <field name="start_date" />
                <field name="end_date" optional="show"/>
                <field name="sport_id" optional="show"/>
            </tree>
        </field>
    </record>

    <!--sport.league form view-->
    <record id="sport_league_view_form" model="ir.ui.view">
        <field name="name">sport_league.view.form</field>
        <field name="model">sport.league</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <div>
                        <h1>
                            <field name="name" />
                        </h1>
                        <h2>
                            <field name="sport_id" />
                        </h2>
                    </div>

                    <group>
                        <field name="start_date" />
                        <field name="end_date" />
                    </group>

                    <notebook>
                        <page name="leagues" string="Leagues">
                            <field name="sport_league_ads">
                                <tree>
                                    <field name="team_id"/>
                                    <field name="points" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
