<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- sport.team tree view-->
    <record id="sport_team_view_tree" model="ir.ui.view">
        <field name="name">sport_team.view.tree</field>
        <field name="model">sport.team</field>
        <field name="arch" type="xml">
            <tree string="Team">
                <field name="name" />
                <field name="logo" />
            </tree>
        </field>
    </record>

    <!-- sport.team form view-->
    <record id="sport_team_view_form" model="ir.ui.view">
        <field name="name">sport_team.view.form</field>
        <field name="model">sport.team</field>
        <field name="arch" type="xml">
            <form string="Team">
                <sheet>
                    <header>
                        <button string="Starting Team" name="make_all_starters" type="object" class="oe_highlight"/>
                        <button string="Substitutes" name="make_all_substitutes" type="object" class="oe_highlight"/>
                        <button string="Add Players" name="action_add_players_under_30" type="object" class="btn-success"/>
                    </header>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Team Name" />
                        </h1>
                    </div>
                    
                    <group>
                        <field name="logo" widget="image"/>
                        <field name="number" />
                    </group>

                    <notebook>
                        <page name="players" string="Players">
                            <field name="player_list_ids">
                                <tree editable='bottom'>
                                    <field name="name" />
                                    <field name="age" />
                                    <field name="position" />
                                    <field name="starting_team"/>
                                </tree>
                            </field>
                        </page>

                        <page name="sport" string="Sport">
                            <field name="sport_id">
                                <tree editable="bottom">
                                    <field name="name" />
                                    <field name="description" />
                                </tree>
                            </field>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <!--sport.team action view-->
    <record id="action_sport_team" model="ir.actions.act_window">
        <field name="name">Sport Team</field>
        <field name="res_model">sport.team</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new sport team
            </p>
        </field>
        
    </record>

</odoo>
