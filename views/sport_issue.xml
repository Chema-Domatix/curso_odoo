<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="action_sport_window" model="ir.actions.act_window">
            <field name="name">Sport Issue</field>
            <field name="res_model">sport.issue</field>
            <field name="view_mode">tree,form,kanban</field>
            <!-- <field name="domain">[]</field>-->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new sport issue
                </p>
            </field>
        </record>

        <menuitem
            id="sport_menu"
            name="Sport Association"
            sequence="10">
        </menuitem>

        <menuitem
            id="sport_issue_menu"
            name="Sport Issues"
            action="action_sport_window"
            sequence="10"
            parent="sport_menu" />

    </data>
</odoo>